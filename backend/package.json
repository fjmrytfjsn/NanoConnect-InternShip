{
  "name": "@nanoconnect/backend",
  "version": "1.0.0",
  "description": "NanoConnect Backend API Server - TypeScript + Express + DDD Architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "tsx src/index.ts",
    "start:prod": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "init-db": "tsx scripts/init-database.ts",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart:prod": "npm run build"
  },
  "keywords": [
    "typescript",
    "express",
    "socket.io", 
    "sqlite",
    "ddd",
    "realtime",
    "presentation",
    "interactive"
  ],
  "author": "NanoConnect Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "better-sqlite3": "^8.7.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "@types/express": "^4.17.17",
    "@types/better-sqlite3": "^7.6.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/joi": "^17.2.3",
    "@types/uuid": "^9.0.2",
    "@types/jest": "^29.5.3",
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fjmrytfjsn/NanoConnect-InternShip.git",
    "directory": "backend"
  }
}